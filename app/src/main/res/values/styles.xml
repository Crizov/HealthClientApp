<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/whiteColor</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="IconLogin">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:background">@drawable/ic_local_hospital_24dp</item>
    </style>

    <style name="IconNav">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/ic_local_hospital_24dp</item>
    </style>

    <style name="IconGradient">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:background">@drawable/ic_local_hospital_24dp</item>
    </style>

    <style name="TextHeading">
        <item name="android:textSize">20dp</item>
    </style>


    <style name="LoginStyles">
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="Container">
        <item name="android:background">@drawable/container</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="ContainerBottomRounded">
        <item name="android:background">@drawable/container_corners_bottom</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/whiteColor</item>
    </style>

    <style name="ButtonSecondary">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">@color/whiteColor</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
