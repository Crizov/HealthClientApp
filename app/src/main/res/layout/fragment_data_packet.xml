<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/datapk"
    tools:context="M5.seshealthpatient.Fragments.DataPacketFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/heartRateContainer"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:id="@+id/btnSHR"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="HeartRate" />

            <TextView
                android:id="@+id/fm01tvid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/btnSHR"
                android:gravity="center"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/locationContainer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/heartRateContainer">

            <Button
                android:id="@+id/btnLocation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Get Location" />

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/btnLocation"
                android:gravity="center"
                android:textSize="20sp" />

        </RelativeLayout>

        <EditText
            android:id="@+id/queryBox"
            android:layout_width="269dp"
            android:layout_height="99dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="149dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:text="Enter Query" />

        <Button
            android:id="@+id/btnSendQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Send Query" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/queryBox"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="-149dp"
            android:text="Enter Query" />


    </RelativeLayout>

</FrameLayout>
